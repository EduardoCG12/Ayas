<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SeleccionFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btnEstetica"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/estetica"/>

                    <TextView
                        android:id="@+id/txtEstetica"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/txtEstetica"
                        style="@style/Texto"
                        android:textColor="@color/texto"
                        android:gravity="center"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btnHostal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/hostal"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/txtHostal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/txtHostal"
                        style="@style/Texto"
                        android:textColor="@color/texto"
                        android:gravity="center"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btnMasaje"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/masaje" />

                    <TextView
                        android:id="@+id/txtMasaje"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/txtMasaje"
                        style="@style/Texto"
                        android:textColor="@color/texto"
                        android:gravity="center"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btnPeluqueria"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/peluqueria"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/txtPeluqueria"
                        android:layout_width="match_parent"
                        android:text="@string/txtPeluqueria"
                        android:layout_height="wrap_content"
                        style="@style/Texto"
                        android:textColor="@color/texto"
                        android:gravity="center"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btnYoga"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/yoga"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/txtYoga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/txtYoga"
                        style="@style/Texto"
                        android:textColor="@color/texto"
                        android:gravity="center"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>